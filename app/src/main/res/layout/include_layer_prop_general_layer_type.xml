<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="?attr/textAppearanceSubtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图层类型"/>

    <RadioGroup
        android:id="@+id/rg_dialog_layer_attr_general_layer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_dialog_layer_attr_general_type_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="点" />

        <RadioButton
            android:id="@+id/rb_dialog_layer_attr_general_type_polyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="线" />

        <RadioButton
            android:id="@+id/rb_dialog_layer_attr_general_type_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="面" />

    </RadioGroup>

    <TextView
        android:id="@+id/txt_dialog_layer_attr_general_layer_type"
        style="?attr/textAppearanceBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="非FeatureLayer"
        android:visibility="gone"/>

</LinearLayout>